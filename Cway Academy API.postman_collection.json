    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "course_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "quiz_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "attempt_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "verify_code",
      "value": "",
      "type": "string"
    }
  ]
}